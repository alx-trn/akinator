<h1>Résultat</h1>

<?php if (empty($result)) : ?>
    <p>Résultat introuvable.</p>
    <p><a class="btn" href="quiz.php?restart=1">Recommencer</a></p>
<?php else : ?>
    <?php
        $image = $result['image'] ?? '';
        // si la BDD contient juste "xxx.webp" on le met dans assets/images
        if ($image !== '' && strpos($image, '/') === false) {
            $image = 'assets/images/' . $image;
        }
        // si la BDD contient déjà un chemin, on le garde
    ?>

    <p class="result-lead">
        Je parie que tu pensais à... <strong><?= htmlspecialchars($result['name'] ?? '') ?></strong>
    </p>

    <?php if (!empty($image)) : ?>
        <img class="result-img" src="<?= htmlspecialchars($image) ?>" alt="<?= htmlspecialchars($result['name'] ?? 'Résultat') ?>">
    <?php endif; ?>

    <p class="result-desc"><?= nl2br(htmlspecialchars($result['description'] ?? '')) ?></p>

    <div class="result-actions">
        <a class="btn" href="quiz.php?restart=1">Rejouer</a>
        <a class="btn" href="index.php">Accueil</a>
    </div>
<?php endif; ?>
